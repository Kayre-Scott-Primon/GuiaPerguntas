<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <div class="card" id="form-question">
      <div class="card-header">
        <h3>Realizar perguntar</h3>
      </div>
      <div class="card-body">
        <form method="post" action="/questionsave">
          <label>Título</label>
          <input
            type="text"
            placeholder="Título"
            class="form-control"
            name="title"
          />
          <br />
          <label>Descrição</label>
          <textarea
            placeholder="Descreva sua pergunta aqui"
            class="form-control"
            name="description"
          ></textarea>
          <br />
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('partials/footer.ejs') %>
